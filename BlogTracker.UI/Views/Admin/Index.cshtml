@model IEnumerable<BlogTracker.UI.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<p>
    <a asp-action="AddEmployee">Add New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Date of Joining</th>
            <th>Pass Code</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmailId</td>
                <td>@employee.Name</td>
                <td>@employee.DateOfJoining.ToString("MM/dd/yyyy")</td>
                <td>@employee.PassCode</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-emailId="@employee.EmailId">Edit</a> |
                    <a asp-action="DeleteEmployee" asp-route-emailId="@employee.EmailId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
